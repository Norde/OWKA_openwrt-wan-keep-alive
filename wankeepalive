#!/bin/sh /etc/rc.common
# Wwan-keep-alive initscript
# Copyright (C) 2007 OpenWrt.org

START=99
STOP=15
PIDFILE=/var/pids/wan-keep-alive.pid
PIDDIR=/var/pids
BINFILE=/usr/wwan-keep-alive/wan-keep-alive.sh

start() {
	[ -d $PIDDIR ] || mkdir -p $PIDDIR
	[ -f $PIDFILE ] && exit 1
	$BINFILE 2>&1 >/dev/null &
	echo $! > $PIDFILE
}

stop() {
	kill `cat $PIDFILE`
	rm $PIDFILE
}
